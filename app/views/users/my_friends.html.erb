<%= render 'friends/lookup' %>

<% if @friendships.size > 0 %>
	<table class="table table-hover table-dark">
	  <thead>
	    <tr>
	    	<th class="page-header" colspan="3">
	    		<h2>My Friends</h2>
	    	</th>
	    </tr>
	    <tr>
	      <th>Name</th>
	      <th>Email</th>
	      <th>Actions</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @friendships.each do |friend| %>
		    <tr>
		      <th><%= friend.full_name %></th>
		      <th><%= friend.email %></th>
		      
						<td>
							<%= link_to "View Profile", user_path(friend), class: "btn btn-primary btn-xs" %>
							<%= link_to "Remove Friend", friendships_path(friend), 
																						method: :delete, 
																						data: {confirm: "Are you sure"},
																						class: "btn btn-xs btn-danger" %>
						</td>
		    </tr>
	    <% end %>
	  </tbody>
	</table>
<% else %>
	<div class="row col-md-12">
		<p class="lead">
			You don't have any friends yet. Please add some!
		</p>
	</div>
<% end %>